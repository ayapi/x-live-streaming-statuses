{
  "manifest_version": 3,
  "name": "X Live Viewer Count",
  "version": "1.0.0",
  "description": "X Live の同時視聴者数をわんコメに転送する",

  "permissions": [
    "storage",
    "cookies",
    "alarms",
    "scripting"
  ],

  "host_permissions": [
    "*://*.x.com/*",
    "http://localhost/*"
  ],

  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://studio.x.com/*"],
      "js": ["content-isolated.js"],
      "run_at": "document_start"
    }
  ],

  "action": {
    "default_popup": "popup.html"
  }
}
